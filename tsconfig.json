{
  "compilerOptions": {
    // "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,

    // "bun-types" is the important part
    "types": ["bun-types"],
    "typeRoots": [
      "./src/@types"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "assets",
    "build"
  ]
}
